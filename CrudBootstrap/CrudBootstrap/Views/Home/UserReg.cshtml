
@model CrudBootstrap.Models.UserInfoModel

@{
    ViewBag.Title = "UserReg";
    Layout = null;
}

<link href="~/Content/AppCSS/css/bootstrap.min.css" rel="stylesheet" />

<link href="~/Content/AppCSS/css/metisMenu.min.css" rel="stylesheet" />

<link href="~/Content/AppCSS/css/startmin.css" rel="stylesheet" />

<link href="~/Content/AppCSS/css/font-awesome.min.css" rel="stylesheet" />


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Registration Form</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Form Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("UserReg", "Home", FormMethod.Post))
                            {

                                @Html.HiddenFor(m => m.id);
                                <div class="form-group">
                                    <label>Name</label>
                                    @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Enter name..", @required = "required" })
                                </div>

                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Enter email..", @required = "required" })
                                </div>

                                <div class="form-group">
                                    <label>Password</label>
                                    @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Enter password..", @required = "required" })
                                </div>


                                <button type="submit" class="btn btn-primary">Submit</button><br /><br />
                                <span>Already have Account</span>
                                <a href="@Url.Action("Index","Home")">Login Here</a>
                            }
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>