@model CrudBootstrap.Models.UserInfoModel

@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<link href="~/Content/AppCSS/css/bootstrap.min.css" rel="stylesheet" />

<link href="~/Content/AppCSS/css/metisMenu.min.css" rel="stylesheet" />

<link href="~/Content/AppCSS/css/startmin.css" rel="stylesheet" />

<link href="~/Content/AppCSS/css/font-awesome.min.css" rel="stylesheet" />
<style>
    .error{
        color:red;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <fieldset>
                            <div class="error">@TempData["Invalid"]</div>
                            <div class="error">@TempData["wrong"]</div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "error" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.password, "", new { @class = "error" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-success">Login</button>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryval")